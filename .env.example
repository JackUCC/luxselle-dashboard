# ─── Firebase ───
# false = real Firestore (production). true = local emulators.
FIREBASE_USE_EMULATOR=false
FIREBASE_PROJECT_ID=luxselle-dashboard
FIREBASE_STORAGE_BUCKET=luxselle-dashboard.firebasestorage.app
# eur3 Firestore (same as Railway). Omit or leave empty for (default) US database.
FIRESTORE_DATABASE_ID=luxselle-dashboard-95977150
FIRESTORE_EMULATOR_HOST=127.0.0.1:8082
FIREBASE_STORAGE_EMULATOR_HOST=127.0.0.1:9198
# Option 1: path to service account JSON file (local)
GOOGLE_APPLICATION_CREDENTIALS=
# Option 2: full service account JSON as one line (e.g. Railway). Paste from Firebase Console.
GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account","project_id":"luxselle-dashboard",...}

# ─── AI ───
# Dynamic routing mode: dynamic | openai | perplexity
AI_ROUTING_MODE=dynamic
# Deprecated compatibility input (one release only): openai | perplexity | mock
# Scheduled for removal in the next breaking cleanup.
# AI_PROVIDER=
OPENAI_API_KEY=<your-openai-api-key>
# Perplexity
PERPLEXITY_API_KEY=<your-perplexity-api-key>
PERPLEXITY_SEARCH_MODEL=sonar-pro
PERPLEXITY_EXTRACTION_MODEL=sonar-pro

# ─── GitHub ───
GITHUB_TOKEN=<your-github-token>

# ─── App ───
BASE_CURRENCY=EUR
TARGET_MARGIN_PCT=35
PORT=3001

# ─── Supplier Email Sync (Gmail) ───
SUPPLIER_EMAIL_ENABLED=true
GMAIL_CLIENT_ID=<your-gmail-client-id>.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=<your-gmail-client-secret>
GMAIL_REFRESH_TOKEN=<your-gmail-refresh-token>
GMAIL_USER=your-email@gmail.com
SUPPLIER_EMAIL_DEFAULT_QUERY=has:attachment newer_than:30d
SUPPLIER_EMAIL_MAX_ATTACHMENT_MB=10

# ─── Frontend (Vite) ───
VITE_FIREBASE_PROJECT_ID=luxselle-dashboard
VITE_FIREBASE_STORAGE_BUCKET=luxselle-dashboard.firebasestorage.app
# Backend origin only — no trailing slash; app appends /api
VITE_API_BASE=https://luxselleserver-production.up.railway.app
# Optional: override EUR→JPY rate API (default: Frankfurter, no key). Must return { rates: { JPY: number } } or { data: { rate: number } }
# VITE_FX_API_URL=https://api.frankfurter.dev/v1/latest?symbols=JPY
