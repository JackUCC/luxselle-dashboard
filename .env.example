# ─── Firebase ───
# false = production Firestore; true = local emulators
FIREBASE_USE_EMULATOR=false
FIREBASE_PROJECT_ID=luxselle-dashboard
FIREBASE_STORAGE_BUCKET=luxselle-dashboard.firebasestorage.app
# eur3: set to luxselle-dashboard-95977150. Omit for (default) US database.
FIRESTORE_DATABASE_ID=luxselle-dashboard-95977150
FIRESTORE_EMULATOR_HOST=127.0.0.1:8082
FIREBASE_STORAGE_EMULATOR_HOST=127.0.0.1:9198
GOOGLE_APPLICATION_CREDENTIALS=
GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account","project_id":"luxselle-dashboard",...}

# ─── AI ───
# dynamic | openai | perplexity
AI_ROUTING_MODE=dynamic
OPENAI_API_KEY=<your-openai-api-key>
PERPLEXITY_API_KEY=<your-perplexity-api-key>
# sonar = standard tier (works on all paid plans); sonar-pro = premium (deeper search, costs more)
PERPLEXITY_SEARCH_MODEL=sonar
PERPLEXITY_EXTRACTION_MODEL=sonar
# Connectivity check after starting server:
# curl "http://localhost:3001/api/health?test_providers=1"

# ─── App ───
BASE_CURRENCY=EUR
TARGET_MARGIN_PCT=35
PORT=3001
# Comma-separated origins for CORS in production (e.g. Vercel URL). Optional.
FRONTEND_ORIGINS=
# Dev only: set to true to disable auth. Do not use in production.
# SKIP_AUTH=

# ─── Search enrichment (optional; defaults in code) ───
# SEARCH_ENRICHMENT_ENABLED=true
# SEARCH_ENRICHMENT_MAX_COUNT=25
# SEARCH_ENRICHMENT_CACHE_TTL_MS=300000
# SEARCH_DOMAIN_ALLOWLIST=
# SEARCH_DOMAIN_DENYLIST=

# ─── Price check (optional; defaults in code) ───
# PRICE_CHECK_V2_ENABLED=false
# PRICE_CHECK_BROAD_STRATEGY_ENABLED=false
# PRICE_CHECK_SECONDARY_DOMAINS=vestiairecollective.com

# ─── Frontend (Vite) ───
VITE_FIREBASE_PROJECT_ID=luxselle-dashboard
VITE_FIREBASE_STORAGE_BUCKET=luxselle-dashboard.firebasestorage.app
# Backend URL, no trailing slash (app appends /api)
VITE_API_BASE=https://luxselleserver-production.up.railway.app
# VITE_FX_API_URL=https://api.frankfurter.dev/v1/latest?symbols=JPY
