{
  "name": "luxselle-dashboard",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently -k \"npm run emulators\" \"npm run dev --workspace=@luxselle/server\" \"npm run dev:client\"",
    "dev:client": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "emulators": "firebase emulators:start --only firestore,storage",
    "seed": "npm run seed --workspace=@luxselle/server",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@luxselle/shared": "*",
    "@tanstack/react-query": "^5.90.20",
    "@tanstack/react-virtual": "^3.13.18",
    "lucide-react": "^0.563.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.27.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "firebase-tools": "^13.20.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^4.0.18"
  }
}
