{
  "name": "luxselle-dashboard",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "18.x || 20.x || 22.x || 24.x"
  },
  "workspaces": [
    "packages/server",
    "packages/shared"
  ],
  "scripts": {
    "dev": "npx concurrently -k \"npm run emulators\" \"npm run dev --workspace=@luxselle/server\" \"npm run dev:client\"",
    "dev:client": "vite --config config/vite.config.ts",
    "build": "vite build --config config/vite.config.ts",
    "preview": "vite preview --config config/vite.config.ts",
    "emulators": "firebase emulators:start --only firestore,storage --config firebase/firebase.json",
    "seed": "npm run seed --workspace=@luxselle/server",
    "import-excel": "npm run import-excel --workspace=@luxselle/server",
    "import-invoice-pdfs": "npm run import-invoice-pdfs --workspace=@luxselle/server",
    "supplier-email-sync": "npm run supplier-email-sync --workspace=@luxselle/server",
    "test": "vitest --run --config config/vitest.config.ts",
    "test:watch": "vitest --config config/vitest.config.ts",
    "test:e2e": "playwright test --config config/playwright.config.cjs",
    "test:e2e:ui": "playwright test --ui --config config/playwright.config.cjs",
    "typecheck": "tsc --noEmit",
    "auto-commit": "node scripts/auto-commit.js",
    "agents:launch": "node scripts/launch-agent-swarm.js"
  },
  "dependencies": {
    "@luxselle/shared": "*",
    "@playwright/test": "^1.58.0",
    "@tanstack/react-query": "^5.90.20",
    "@tanstack/react-virtual": "^3.13.18",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "firebase-admin": "^13.6.1",
    "firebase-tools": "^13.20.0",
    "lucide-react": "^0.563.0",
    "postcss": "^8.4.47",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.27.0",
    "tailwindcss": "^3.4.14",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^4.0.18"
  }
}
